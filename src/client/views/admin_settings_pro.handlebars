<!-- row -->
<div class="container-fluid">
  <div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
      <div class="welcome-text">
        <h4>{{title}}</h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xl-12 col-lg-12">
      <div class="card">
        <div class="card-body">
          <div class="basic-form">
            <form method="post">

              <div class="form-group row">
                <label class="col-sm-3 col-form-label">Тариф
                  <br />
                  <span> {{setting.TARIFF}} </span></label>
                <div class="col-sm-9">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="TARIFF"
                      value="0"
                      {{#if_eq setting.TARIFF '0'}}
                        checked="checked"
                      {{/if_eq}}
                    />
                    <label class="form-check-label">
                      Пробный
                    </label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="TARIFF"
                      value="1"
                      {{#if_eq setting.TARIFF '1'}}
                        checked="checked"
                      {{/if_eq}}
                    />
                    <label class="form-check-label">
                      Стандарт
                    </label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="TARIFF"
                      value="2"
                      {{#if_eq setting.TARIFF '2'}}
                        checked="checked"
                      {{/if_eq}}
                    />
                    <label class="form-check-label">
                      Оптимальный
                    </label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="TARIFF"
                      value="3"
                      {{#if_eq setting.TARIFF '3'}}
                        checked="checked"
                      {{/if_eq}}
                    />
                    <label class="form-check-label">
                      Профи
                    </label>
                  </div>

                </div>
              </div>


                    <div class="form-group row align-items-center">
                      <label class="col-sm-3 col-form-label">Включить опцию создания qr кода для блюда</label>
                      <div class="col-sm-9">
                        <input
                          type="checkbox"
                          name="enableDishesQr"
                          {{enableDishesQr}}
                          value="true"
                        />
                      </div>
                    </div>

                    <div class="form-group row align-items-center">
                      <label class="col-sm-3 col-form-label">Включить интеграцию с
                        Iiko</label>
                      <div class="col-sm-9">
                        <input
                          type="checkbox"
                          name="isIntegrationWithIiko"
                          {{isIntegrationWithIiko}}
                          value="true"
                        />
                      </div>
                    </div>





              <div class="form-group row">
                <label class="col-sm-3 col-form-label">telegramBotId</label>
                <div class="col-sm-9">
                  <input
                    type="text"
                    class="form-control"
                    name="telegramBotId"
                    value="{{setting.telegramBotId}}"
                  />
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-3 col-form-label">adminCode</label>
                <div class="col-sm-9">
                  <input
                    type="text"
                    class="form-control"
                    name="adminCode"
                    value="{{setting.adminCode}}"
                  />
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-3 col-form-label">waiterCode</label>
                <div class="col-sm-9">
                  <input
                    type="text"
                    class="form-control"
                    name="waiterCode"
                    value="{{setting.waiterCode}}"
                  />
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-3 col-form-label">telegramBotName</label>
                <div class="col-sm-9">
                  <input
                    type="text"
                    class="form-control"
                    name="telegramBotName"
                    value="{{setting.telegramBotName}}"
                  />
                </div>
              </div>

              <div class="form-group row">
                 <label class="col-sm-3 col-form-label">yandexMetrika</label>
                 <div class="col-sm-9">
                    <input type="text" class="form-control" name="yandexMetrika" value="{{setting.yandexMetrika}}">
                 </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-10">
                  <button
                    type="submit"
                    class="btn btn-primary"
                  >Сохранить</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
