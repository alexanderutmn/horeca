<!-- row -->
<div class="container-fluid">
  <div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
      <div class="welcome-text">
        <h4>{{title}}</h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xl-12 col-lg-12">
      <div class="card">
        <div class="card-body">
          <div class="basic-form">
            <form method="post">
              <div class="form-group row">
                <label class="col-sm-3 col-form-label">Название заведения</label>
                <div class="col-sm-9">
                  <input
                    type="text"
                    class="form-control"
                    name="TITLE_REST"
                    value="{{setting.TITLE_REST}}"
                  />
                </div>
              </div>


              {{#if showDeliveryOptions}}
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Кол-во столов</label>
                  <div class="col-sm-9">
                    <input
                      type="number"
                      class="form-control"
                      name="COUNT_TABLE"
                      value="{{setting.COUNT_TABLE}}"
                    />
                  </div>
                </div>

                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Время открытия</label>
                  <div class="col-sm-9">
                    <input
                      type="time"
                      class="form-control"
                      name="openTime"
                      value="{{setting.openTime}}"
                    />
                  </div>
                </div>

                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Время закрытия</label>
                  <div class="col-sm-9">
                    <input
                      type="time"
                      class="form-control"
                      name="closeTime"
                      value="{{setting.closeTime}}"
                    />
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Стоимость доставки</label>
                  <div class="col-sm-9">
                    <input
                      type="number"
                      class="form-control"
                      name="DELIVERY_PRICE"
                      value="{{setting.DELIVERY_PRICE}}"
                    />
                  </div>
                </div>

                <div class="form-group row align-items-center">
                  <label class="col-sm-3 col-form-label">Влючить заказы в зале
                    (без qr на каждый стол)</label>
                  <div class="col-sm-9">
                    <input
                      type="checkbox"
                      name="enableInHall"
                      {{setting.enableInHall}}
                      value="true"
                    />
                  </div>
                </div>

                <div class="form-group row align-items-center">
                  <label class="col-sm-3 col-form-label">Включить доставку</label>
                  <div class="col-sm-9">
                    <input
                      type="checkbox"
                      name="enableDelivery"
                      {{setting.enableDelivery}}
                      value="true"
                    />
                  </div>
                </div>
                <div class="form-group row align-items-center">
                  <label class="col-sm-3 col-form-label">Включить самовывоз</label>
                  <div class="col-sm-9">
                    <input
                      type="checkbox"
                      name="enablePickup"
                      {{setting.enablePickup}}
                      value="true"
                    />
                  </div>
                </div>
                <div class="form-group row align-items-center">
                  <label class="col-sm-3 col-form-label">Включить онлайн бронь</label>
                  <div class="col-sm-9">
                    <input
                      type="checkbox"
                      name="enableBooking"
                      {{setting.enableBooking}}
                      value="true"
                    />
                  </div>
                </div>

              {{/if}}
                <div class="form-group row align-items-center">
                  <label class="col-sm-3 col-form-label">Выбрать валюту</label>
                  <select name="currentCurrency">
                    <option value="₽" style="font-size: 12pt;">Рубли(₽)</option>
                    <option value="₸" style="font-size: 12pt;">Тенге(₸)</option>
                  </select>
                  <label class="col-sm-3 col-form-label">Текущая - {{setting.currentCurrency}}</label>
                </div>
              <div class="form-group row">
                <div class="col-sm-10">
                  <button
                    type="submit"
                    class="btn btn-primary"
                  >Сохранить</button>
                  {{#if setting.isIntegrationWithIiko}}
                    <a
                      href="/admin/start-iiko/"
                      class="btn btn-primary"
                    >Настройка интеграции с Iiko</a>
                  {{/if}}
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
