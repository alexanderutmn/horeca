{{#if order}}
						<!-- row -->
			<div class="container-fluid">
				<div class="form-head d-flex mb-3 align-items-start">
					<div class="mr-auto d-none d-lg-block">
						<h2 class="text-black font-w600 mb-0">Заказ #{{{order.incoming_order_id}}}</h2>
						<ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin/orders/" class="text-primary">Список заказов</a></li>
                            <li class="breadcrumb-item active"><a href="javascript:void(0)">Заказ #{{{order.incoming_order_id}}}</a></li>
                        </ol>
					</div>
					<div class="dropdown mb-md-3 mb-2 ml-auto">
						<div class="btn-group mb-1">
                <button class="btn {{order.buttonColor}} btn-lg dropdown-toggle" type="button" data-toggle="dropdown">
									{{order.orderStatusText}}
                </button>
								{{#if order.canChange }}
									<div class="dropdown-menu">
										<a class="dropdown-item change-order-status" href="javascript:void(0);" data-order-status="1" data-order-id="{{idOrder}}">Принят</a>
										{{#if order.isRemoteOrder}}
											<a class="dropdown-item change-order-status" href="javascript:void(0);" data-order-status="3" data-order-id="{{idOrder}}">У курьера</a>
										{{/if}}
										<a class="dropdown-item change-order-status" href="javascript:void(0);" data-order-status="4" data-order-id="{{idOrder}}">Выдан</a>
										<a class="dropdown-item change-order-status" href="javascript:void(0);" data-order-status="7" data-order-id="{{idOrder}}">Отменён</a>
									</div>
								{{/if}}
            </div>
