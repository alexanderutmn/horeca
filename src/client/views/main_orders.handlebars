<div class="orders-block">
  {{#each orders}}
  <div class="order">
    <div class="order__top">
      <div class="order__title">
        Заказ №{{incoming_order_id}}
      </div>
      <div class="order__price">
        {{orderPrice}} {{@root.currency}}
      </div>
    </div>
    <div class="order__middle text-light">
      <div class="order__status">
        Статус – {{orderStatus}}
      </div>
      <div class="order__date">
        {{place}}
      </div>
    </div>
    <div class="order__bottom">
      <a href="javascript:void(0);" class="detail-order button-inverse" data-id="{{incoming_order_id}}" data-currency="{{currency}}">
        Детали заказа
      </a>
    </div>
  </div>
  {{else}}
    <div class="alert alert-danger" style="margin-top: 15px;">У вас пока нет заказов</div>
  {{/each}}
</div>
{{> main_order_detail }}
