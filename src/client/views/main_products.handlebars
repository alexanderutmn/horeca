<div class="products-block">
  <div class="products">

    {{#if items}}
      {{#each items}}
        <div class="product-container">
          <div class="product {{#if countInCart }} in-cart {{/if}} {{#unless ../showProductsControl}} height-min {{/unless}}"
                data-id="{{id}}"
                data-title="{{title}}"
                data-price="{{price}}"
                data-weight="{{weight}}"
                data-id-category="{{id_category}}"
                data-unit="{{unit}}"
                data-img="{{img}}"
                data-description="{{description}}"
                data-currentCurrency="{{currentCurrency}}"
            >
            <div class="product__top">
              <div class="product__image" style="background-image: url({{img}})">
                <!-- <img src="{{img}}" alt="" style="width: 100%; height: auto;"> -->
                <div class="in-cart__count">
                  {{countInCart}}
                </div>
              </div>
              <div class="product__title">
                {{shortTitle}}
              </div>
              <div class="product__units text-light">
                {{#if ../showWeight}}
                  {{weight}} {{unit}}
                {{/if}}
              </div>
            </div>
            {{#if ../showProductsControl}}
              <div class="product__price-block loght">
                <div class="product__minus main-color-svg">
                  <svg width="12" height="2" viewBox="0 0 12 2" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0.923077 0.0769043H5.07692H6.92308H11.0769C11.5867 0.0769043 12 0.49018 12 0.999981C12 1.50978 11.5867 1.92306 11.0769 1.92306H6.92308H5.07692H0.923077C0.413276 1.92306 0 1.50978 0 0.999981C0 0.49018 0.413276 0.0769043 0.923077 0.0769043Z" fill="white"/>
                  </svg>
                </div>
                <div class="product__price">
                  <span class="product__price-value price-val">
                    {{price}}
                  </span>
                  {{@root.currentCurrency}}
                </div>
                <div class="product__plus main-color-svg">
                  <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M6.92308 5.07692V0.923077C6.92308 0.413276 6.5098 0 6 0C5.4902 0 5.07692 0.413276 5.07692 0.923077V5.07692H0.923077C0.413276 5.07692 0 5.4902 0 6C0 6.5098 0.413276 6.92308 0.923077 6.92308H5.07692V11.0769C5.07692 11.5867 5.4902 12 6 12C6.5098 12 6.92308 11.5867 6.92308 11.0769V6.92308H11.0769C11.5867 6.92308 12 6.5098 12 6C12 5.4902 11.5867 5.07692 11.0769 5.07692H6.92308Z" fill="white"/>
                  </svg>
                </div>
              </div>
            {{/if}}
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="alert alert-danger">Нет элементов</div>
    {{/if}}

  </div>
</div>

