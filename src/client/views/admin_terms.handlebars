<!-- row -->
<div class="container-fluid">
  <div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
      <div class="welcome-text">
        <h4>{{title}}</h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xl-12 col-lg-12">
      <div class="card">
        <div class="card-body">
          <div class="basic-form">
            <form method="post">
              <div class="input-group mb-3">
                <h5 class="mt-1 mb-1">Контактные данные</h5>
              </div>
              <div class="form-group row">
                <div class="input-group mb-3">
                  <div class="col-sm-4 col-form-label">
                    <label class="">Юридический адрес</label>
                  </div>
                  <input
                    type="text"
                    class="form-control"
                    name="JURY_ADDRESS"
                    placeholder="Юридический адрес"
                    value="{{terms.JURY_ADDRESS}}"
                  />
                </div>
              </div>
              <div class="form-group row">
                <div class="input-group mb-3">
                  <div class="col-sm-4 col-form-label">
                    <label class="">Фактический адрес</label>
                  </div>
                  <input
                    type="text"
                    class="form-control"
                    name="PHYSICAL_ADDRESS"
                    value="{{terms.PHYSICAL_ADDRESS}}"
                    placeholder="Фактический адрес"
                  />
                </div>
              </div>
              <div class="form-group row">
                <div class="input-group mb-3">
                  <div class="col-sm-4 col-form-label">
                    <label class="">Электронная почта</label>
                  </div>
                  <input
                    type="email"
                    class="form-control"
                    name="EMAIL_ADDRESS"
                    value="{{terms.EMAIL_ADDRESS}}"
                    placeholder="Электронная почта"
                  />
                </div>
              </div>

              <div class="form-group row">
                <div class="input-group mb-3">
                  <div class="col-sm-4 col-form-label">
                    <label class="">Телефон</label>
                  </div>
                  <input
                    type="text"
                    class="form-control"
                    name="PHONE_NUMBER"
                    value="{{terms.PHONE_NUMBER}}"
                    placeholder="Телефон"
                  />
                </div>
              </div>
              <div class="form-group row">
                <div class="input-group mb-3">
                  <div class="col-sm-4 col-form-label">
                    <label class="">Сокращённое название</label>
                  </div>
                  <input
                    type="text"
                    class="form-control"
                    name="SHORT_NAME"
                    value="{{terms.SHORT_NAME}}"
                    placeholder="Сокращённое название"
                  />
                </div>
              </div>
              <div class="form-group row">
                <div class="input-group mb-3">
                  <div class="col-sm-4 col-form-label">
                    <label class="">Веб-сайт</label>
                  </div>
                  <input
                    type="text"
                    class="form-control"
                    name="WEB_SITE"
                    value="{{terms.WEB_SITE}}"
                    placeholder="Веб-сайт"
                  />
                </div>
              </div>
              <div class="form-group row">
                <div class="input-group mb-3">
                  <div class="col-sm-4 col-form-label">
                    <label class="">Реквизиты</label>
                  </div>
                  <textarea
                    class="form-control"
                    aria-label="With textarea"
                    name="BANK_DETAILS"
                    placeholder="Реквизиты"
                    rows="{{rows}}"
                  >{{terms.BANK_DETAILS}}</textarea>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-10">
                  <button
                    type="submit"
                    class="btn btn-primary"
                  >Сохранить</button>
                </div>
              </div>
            </form>
          </div>
        </div>
        <br />
      </div>
    </div>
  </div>
</div>