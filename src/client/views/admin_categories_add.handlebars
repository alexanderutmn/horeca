<!-- row -->
<div class="container-fluid">
  <div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
      <div class="welcome-text">
        <h4>{{item.title}}</h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xl-12 col-lg-12">
      <div class="card">
        <div class="card-body">
          <div class="basic-form">
            <form method="post">
              <div class="form-group row">
                <label class="col-sm-3 col-form-label">Название</label>
                <div class="col-sm-9">
                  <input
                    type="text"
                    class="form-control"
                    name="title"
                    required
                    value="{{body.title}}"
                  />
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-3 col-form-label">Родительская категория</label>
                <div class="col-sm-9">
                  <select class="" name="parent_id" id="product_id_category">
                    <option value="#">Не выбрана</option>
                    {{#if item.parent_id.title}}
                      <option
                        value="{{item.parent_id._id}}"
                        selected
                      >{{item.parent_id.title}}</option>
                    {{/if}}
                    {{#each categories}}
                      <option value="{{_id}}">{{title}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-3 col-form-label">Сортировка</label>
                <div class="col-sm-9">
                  <input
                    type="number"
                    class="form-control"
                    name="sort"
                    value="{{body.sort}}"
                    placeholder="500"
                  />
                </div>
              </div>
              <fieldset class="form-group">
                <div class="row">
                  <label class="col-form-label col-sm-3 pt-0">Категория с
                    продуктами без изображений</label>
                  <div class="col-sm-9">
                    <div class="form-group mb-0">
                      <div class="radio">
                        <label><input
                            type="radio"
                            name="noImagesCategory"
                            value="true"
                          />
                          Да</label>
                      </div>
                      <div class="radio">
                        <label><input
                            type="radio"
                            name="noImagesCategory"
                            value="false"
                            checked
                          />
                          Нет</label>
                      </div>
                    </div>
                  </div>
                </div>
              </fieldset>
              <div class="form-group row">
                <div class="col-sm-10">
                  <button
                    type="submit"
                    class="btn btn-primary"
                  >Сохранить</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
