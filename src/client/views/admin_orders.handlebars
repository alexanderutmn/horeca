      <!-- row -->
<div class="container-fluid">
  <div class="d-flex mb-3 align-items-center">
    <div class="mr-auto d-none d-lg-block">
      <h2 class="text-black font-w600 mb-0">Заказы</h2>
      <p class="mb-0">Ваш список заказов</p>
    </div>
    <div class="col-6 col-md-3">
      <p>Статус</p>
      <select class="single-select-placeholder js-states order-status">
        <option value="100">Все</option>
        <option value="0">Новый</option>
        <option value="1">Принят</option>
        <option value="3">У курьера</option>
        <option value="4">Выдан</option>
        <option value="7">Отменён</option>
      </select>
    </div>
    <div class="ml-3 col-6 col-md-3">
      <p>Дата</p>
      <input class="form-control input-daterange-datepicker orders" type="text" name="daterange" value="{{{today}}}">
    </div>
  </div>
          <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <table id="orders-table" class="display mb-4 dataTablesCard">
          <thead>
            <tr>
              <th>Номер</th>
              <th>Дата</th>
              <th>Место</th>
              <th>Статус</th>
              <th>Стоимость</th>
            </tr>
          </thead>
          <tbody>
            {{#each orders}}
              <tr>
                <td>{{incoming_order_id}}</td>
                <td>{{createdAt}}</td>
                <td>{{placeText}}</td>
                <td><span class="btn btn-sm light {{buttonColor}} fs-16">{{orderStatusText}}</span></td>
                <td>{{orderPrice}} {{@root.setting.currentCurrency}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
              </div>
  </div>
      </div>
